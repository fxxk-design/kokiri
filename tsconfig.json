{
  "compilerOptions": {
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "importHelpers": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@kokiri/core": ["packages/core/src/index.ts"],
      "@kokiri/core/dist/*": ["packages/core/src/*"],
      "kokiri": ["packages/kokiri/src/index.ts"],
      "kokiri/dist/*": ["packages/kokiri/src/*"],
      "@/*": ["demos"]
    }
  },
  "include": [
    "typings",
    "packages/*/src",
    "demos"
  ]
}
