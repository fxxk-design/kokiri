{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "declarationDir": "packages/core/dist",
    "outDir": "packages/core/dist",
    "strict": true,
    "importHelpers": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "shims-vue.d.ts",
    "shims-sfc.d.ts",
    "packages/core/src"
  ]
}
