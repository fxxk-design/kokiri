{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "declarationDir": "dist/typings",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["test/app/shared/*"],
      "@petals/*": ["test/external/petals/*"],
      "@kokiri/*": ["test/external/kokiri/*"],
      "handie-vue": ["src/index.ts"]
    }
  },
  "include": ["src", "test/app", "test/external"]
}
